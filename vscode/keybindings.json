[
    // Tab navigation
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor"
    },

    // Emulate tmux pane navigation keys
    // Inspired by https://stackoverflow.com/questions/36328029/is-there-a-hotkey-to-switch-between-split-window-panes
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
        "when": "editorTextFocus"
    },

    // Emulate tux "zoom pane"
    {
        "key": "alt+z",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
    },
    {
        "key": "alt+z",
        "command": "workbench.action.minimizeOtherEditors",
        "when": "editorTextFocus"
    },

    // Emulate tmux split to open / focus on terminal
    {
        "key": "alt+s",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus"
    },

    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.showCommands"
    },
]